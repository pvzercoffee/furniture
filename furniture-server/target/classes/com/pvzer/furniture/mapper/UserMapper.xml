<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pvzer.furniture.mapper.UserMapper">
    <insert id="signup">
      insert into users(username,password,email,name,telephone,gender,
                        birthday,create_time,update_time)
      value(#{username},#{password},#{email},#{name},#{telephone},#{gender},
            #{birthday},now(),now());

    </insert>
    
    <update id="modify">
        update users
            <set>
                <if test="username != null">username = #{username},</if>
                <if test="password != null">password = #{password},</if>
                <if test="email != null">email = #{email},</if>
                <if test="name != null">name = #{name},</if>
                <if test="telephone != null">telephone = #{telephone},</if>
                <if test="gender != null">gender = #{gender},</if>
                <if test="birthday != null">birthday = #{birthday},</if>
                update_time = now()
            </set>
        where id = #{id}
    </update>

</mapper>