<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pvzer.furniture.mapper.MessageMapper">
    <insert id="addToMessageItemsLink">
        insert into message_items_link(message_id, item_id) values
            <foreach collection="itemList" item="item" separator=",">
                (#{messageId},#{item})
            </foreach>
    </insert>

    <resultMap id="messageMap" type="com.pvzer.furniture.pojo.MessageInfo">
        <id column="id" property="id"/>
        <result column="username" property="username" />
        <result column="name" property="name" />
        <result column="telephone" property="telephone" />
        <result column="email" property="email" />
        <result column="text" property="text" />
        <result column="create_time" property="createTime" />
        <collection property="itemList" ofType="java.lang.String">
            <id column="item" />
        </collection>
    </resultMap>

<!--    根据留言id查出留言用户名和留言所有的item-->
    <select id="query" resultMap="messageMap ">
        select msgs.id,users.username as username,msgs.name,msgs.telephone,
               msgs.email,msgs.text,msgs.create_time, items.name as item
        from message_items_link link
        left join items on link.item_id = items.id
        left join messages msgs on msgs.id = link.message_id
        left join users on users.id = msgs.user_id
        order by msgs.create_time desc
    </select>

</mapper>